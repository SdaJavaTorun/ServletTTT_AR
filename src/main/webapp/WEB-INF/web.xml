<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <servlet>
    <servlet-name>HelloWorldFantastic</servlet-name>
    <servlet-class>pl.sdacademy.HelloWorldFantastic</servlet-class>
    <init-param>
      <param-name>who</param-name>
      <param-value>World 2 Tanks</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>TicTacToe</servlet-name>
    <servlet-class>pl.sdacademy.TicTacToeServlet</servlet-class>
    <init-param>
      <param-name>player</param-name>
      <param-value>2</param-value>
    </init-param>
  </servlet>

  <filter>
    <filter-name>LogFilter</filter-name>
    <filter-class>pl.sdacademy.LogFilter</filter-class>
    <init-param>
      <param-name>address</param-name>
      <param-value>localhost</param-value>
    </init-param>

  </filter>
  <filter-mapping>
    <filter-name>LogFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FilterSec</filter-name>
    <filter-class>pl.sdacademy.SecureFilter</filter-class>
    <init-param>
      <param-name>address</param-name>
      <param-value>localhost</param-value>
    </init-param>

  </filter>
  <filter-mapping>
    <filter-name>FilterSec</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet-mapping>
    <servlet-name>TicTacToe</servlet-name>
    <url-pattern>/tic</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HelloWorldFantastic</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>TicTacToe</servlet-name>
    <url-pattern>/nacisnijpole</url-pattern>
  </servlet-mapping>

</web-app>